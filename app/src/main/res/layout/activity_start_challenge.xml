<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayoutStartActivity"
        android:background="@drawable/background"
        tools:context="view.StartChallengeActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewChallengePlayers"
            android:layout_width="180dp"
            android:layout_height="310dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.481"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleStart"/>

    <TextView
            android:text="@string/title_challenge"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvTitleStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/buttonStartChallengeGame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_start_game"
            android:background="@drawable/menu_button"
            android:textColor="@color/colorMainButtonText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ivGamePlayable"/>

    <Button
            android:id="@+id/buttonPreviousLevel"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="@string/buttonPrevious"
            android:background="@drawable/menu_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvChallengeWidth" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/buttonStartChallengeGame"/>

    <Button
            android:id="@+id/buttonNextLevel"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="@string/buttonNext"
            android:background="@drawable/menu_button"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonStartChallengeGame"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvChallengeWidth"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvChallengeWidth"
            app:layout_constraintTop_toBottomOf="@+id/tvChallengeHeight"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvChallengeHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewChallengePlayers"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvCurrentLevel"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonNextLevel"
            app:layout_constraintStart_toEndOf="@+id/buttonPreviousLevel"
            app:layout_constraintTop_toTopOf="@+id/buttonPreviousLevel"
            app:layout_constraintBottom_toBottomOf="@+id/buttonPreviousLevel"/>

    <com.google.android.gms.ads.AdView
            android:id="@+id/startChallengeAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameTypeStartCampaignView"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/recyclerViewChallengePlayers"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/recyclerViewChallengePlayers"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isCompletedLevelView"
            ads:layout_constraintTop_toTopOf="@+id/recyclerViewChallengePlayers"
            ads:layout_constraintStart_toEndOf="@+id/recyclerViewChallengePlayers"
            ads:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivGamePlayable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonNextLevel"/>

</android.support.constraint.ConstraintLayout>