<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvPlayerHolder"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="4dp">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPlayerListBackground"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

    <ImageView
            android:id="@+id/imageViewPlayer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorMessage"
            android:layout_toEndOf="@id/imageViewPlayer"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>

    <TextView
            android:id="@+id/typeView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorMessage"
            android:layout_toEndOf="@id/nameView"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>

</RelativeLayout>

</android.support.v7.widget.CardView>