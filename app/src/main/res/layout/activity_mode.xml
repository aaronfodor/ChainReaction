<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context="view.MainActivity">

    <TextView
            android:text="@string/title_activity_mode"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvTitleMode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:text="@string/title_custom_game"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvModeCustom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/modeGuidelineTop"/>

    <Button
            android:id="@+id/buttonClassicGame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_classic_game"
            android:background="@drawable/menu_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvModeCustom"/>

    <Button
            android:id="@+id/buttonDynamicGame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_dynamic_game"
            android:background="@drawable/menu_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonClassicGame"/>

    <TextView
            android:text="@string/title_campaign"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvModeCampaign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/modeGuidelineBottom"/>

    <Button
            android:id="@+id/buttonCampaignGame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_campaign_game"
            android:background="@drawable/menu_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvModeCampaign"/>

    <com.google.android.gms.ads.AdView
            android:id="@+id/modeAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/modeGuidelineTop"
            ads:layout_constraintGuide_percent="0.4"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/modeGuidelineBottom"
            app:layout_constraintGuide_percent="0.2"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" ads:srcCompat="@drawable/classic_game_icon"
            android:id="@+id/gameTypeModeClassicView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/buttonClassicGame"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvModeCustom"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" ads:srcCompat="@drawable/dynamic_game_icon"
            android:id="@+id/gameTypeModeDynamicView"
            app:layout_constraintStart_toEndOf="@+id/buttonDynamicGame" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonClassicGame"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" ads:srcCompat="@drawable/campaign_game_icon"
            android:id="@+id/gameTypeModeCampaignView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/buttonCampaignGame"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvModeCampaign"/>

</android.support.constraint.ConstraintLayout>