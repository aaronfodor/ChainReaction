<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayoutStartActivity"
        android:background="@drawable/background"
        tools:context="view.StartActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPlayers"
            android:layout_width="180dp"
            android:layout_height="310dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.481"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleStart"/>

    <TextView
            android:text="@string/title_activity_start"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvTitleStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/buttonAddHumanPlayer"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="@string/button_add_human_player"
            android:background="@drawable/menu_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/recyclerViewPlayers"
            app:layout_constraintEnd_toStartOf="@+id/tvHeight"/>

    <Button
            android:id="@+id/buttonHeightMinus"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="@string/buttonExtract"
            android:background="@drawable/menu_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddHumanPlayer"
            app:layout_constraintEnd_toStartOf="@+id/tvHeight"/>
    <Button
            android:id="@+id/buttonWidthMinus"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="@string/buttonExtract"
            android:background="@drawable/menu_button"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonHeightMinus"
            app:layout_constraintEnd_toStartOf="@+id/tvWidth"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/buttonAddAIPlayer"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="@string/button_add_ai_player"
            android:background="@drawable/menu_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/recyclerViewPlayers"
            app:layout_constraintStart_toEndOf="@+id/tvHeight"/>

    <Button
            android:id="@+id/buttonHeightPlus"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="@string/buttonAdd"
            android:background="@drawable/menu_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddAIPlayer"
            app:layout_constraintStart_toEndOf="@+id/tvHeight"/>
    <Button
            android:id="@+id/buttonWidthPlus"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="@string/buttonAdd"
            android:background="@drawable/menu_button"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonHeightPlus"
            app:layout_constraintStart_toEndOf="@+id/tvWidth"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/buttonClearPlayers"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="@string/button_clear_players"
            android:background="@drawable/menu_button"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonWidthPlus"
            app:layout_constraintEnd_toEndOf="@+id/buttonWidthPlus"
            app:layout_constraintStart_toStartOf="@+id/buttonWidthMinus"/>

    <Button
            android:id="@+id/buttonStartGame"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="@string/button_start_game"
            android:background="@drawable/menu_button"
            android:textColor="@color/colorMainButtonText"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonClearPlayers"
            app:layout_constraintEnd_toEndOf="@+id/buttonWidthPlus"
            app:layout_constraintStart_toStartOf="@+id/buttonWidthMinus"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvHeight"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/buttonHeightPlus"
            app:layout_constraintBottom_toTopOf="@+id/buttonWidthPlus" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMessage"
            android:id="@+id/tvWidth"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/buttonWidthPlus"
            app:layout_constraintBottom_toBottomOf="@+id/buttonWidthPlus" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <com.google.android.gms.ads.AdView
            android:id="@+id/startAdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>